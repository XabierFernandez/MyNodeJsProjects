{
  "name": "mqtt-dashboard-electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.n3uron.mqttdashboard",
    "files": [
      "../src/server.mjs",
      "../public/**/*",
      "main.js"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "express": "^4.21.2",
    "mqtt": "^5.10.4",
    "body-parser": "^1.20.1"
  }
}
